# ===========================================
# EXAMPLE ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# ===========================================

# Gemini AI API
GEMINI_API_KEY=your_gemini_api_key_here

# Facebook Marketing API
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_AD_ACCOUNT_ID=your_ad_account_id

# PostgreSQL Database
POSTGRES_USER=meta_user
POSTGRES_PASSWORD=your_secure_password_here
DB_PASSWORD=your_secure_password_here
POSTGRES_DB=meta_analysis
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Your App Name
MAGIC_LINK_EXPIRY_MINUTES=15

# URLs
FRONTEND_URL=http://localhost:3000

# Development Settings
DEV_BYPASS_AUTH=false
ENVIRONMENT=development

# Security - JWT Secret
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=generate_a_64_character_hex_string_here

# OAuth Redirect URIs
FACEBOOK_REDIRECT_URI=http://localhost:8000/api/v1/auth/facebook/callback
FACEBOOK_OAUTH_REDIRECT_URL=http://localhost:3000/en/callback

# Error Tracking (Optional - for production)
# SENTRY_DSN=https://your_sentry_dsn_here

# Facebook API Credentials
# Get these from: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your_app_id_here
FACEBOOK_APP_SECRET=your_app_secret_here
FACEBOOK_ACCESS_TOKEN=your_access_token_here
FACEBOOK_AD_ACCOUNT_ID=your_ad_account_id_here

# Database Configuration
# PostgreSQL connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=facebook_ads
DB_USER=postgres
DB_PASSWORD=your_password_here

# Optional: Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Google Sheets API Configuration (for export functionality)
# Path to Google service account credentials JSON file
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CREDENTIALS_PATH=/path/to/your/service-account-credentials.json

# FastAPI/CORS Configuration
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
JWT_SECRET_KEY=generate_a_random_string_here

# Google OAuth Configuration (for Google Login)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
